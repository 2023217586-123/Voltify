<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ================= HEADER ================= -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/voltify_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltify"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electricity Bill Calculator"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- ============== MAIN CONTENT BOX ============== -->


    <!-- ================= FOOTER ================= -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Month -->
            <Spinner
                android:id="@+id/spinnerMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Electricity usage -->
            <EditText
                android:id="@+id/editUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Electricity usage (kWh)"
                android:inputType="number" />

            <!-- Rebate -->
            <EditText
                android:id="@+id/editRebate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rebate (%)"
                android:inputType="numberDecimal" />

            <!-- Calculate -->
            <Button
                android:id="@+id/buttonCalc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate &amp; Save" />

            <!-- Output -->
            <TextView
                android:id="@+id/textTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total charges: RM 0.00" />

            <TextView
                android:id="@+id/textFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final cost (after rebate): RM 0.00" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/buttonViewBills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Saved Bills"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"/>

</LinearLayout>
